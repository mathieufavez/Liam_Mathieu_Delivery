@model IEnumerable<DTO.Delivery_Time>

@{
    ViewData["Title"] = "ChooseDeliveryTime";
}

<h2>Choisir une heure de livraison</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDelivery_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery_time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDelivery_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery_time)
            </td>
            <td>
                @Html.ActionLink("Sélectionner", "ChoixDelivery_Time", new {  id=item.IdDelivery_Time }) 
            </td>
        </tr>
}
    </tbody>
</table>
