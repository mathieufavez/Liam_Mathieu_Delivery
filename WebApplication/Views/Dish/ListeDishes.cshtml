@model IEnumerable<DTO.Dish>

@{
    ViewData["Title"] = "ListeDishes";
}

<h2>Liste des plats</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>
                Nom
            </th>
            <th>
                Prix
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) CHF
            </td>
           
            <td>
                <div align="center">
                    <a asp-controller="Dish" asp-action="Choix" asp-route-id="@item.IdDish" asp-route-price="@item.Price" class="btn btn-success" role="button">Choisir</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Order_Dish" asp-action="ListOrder_Dish">Retour à la liste des plats commandés</a>


