@model IEnumerable<DTO.Dish>

@{
    ViewData["Title"] = "ListeDishes";
}

<h2>Liste des plats</h2>

<table class="table">
    <thead>
        <tr>

            <th>
                Nom
            </th>
            <th>
                Prix
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) CHF
            </td>
           
            <td>
                @Html.ActionLink("Choisir", "Choix", new {  id=item.IdDish , price=item.Price}) 
            </td>
        </tr>
}
    </tbody>
</table>


