@model IEnumerable<DTO.Order>

@{
    ViewData["Title"] = "Vos commandes";
}



<h2>Vos commandes</h2>

<table id="tableSortedByIdOrder" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Numéro de la commande
            </th>
            <th>
                Statut
            </th>
            <th>
                Crée à
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created_at)
                </td>
                <td>
                    <div align="center">
                        @if (item.Status == "En cours")
                        {
                          
                            <a id="@item.IdOrder"  asp-controller="Order" asp-action="CancelOrder" asp-route-id="@item.IdOrder" class="btn btn-danger" role="button">Annuler la commande</a>

                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
