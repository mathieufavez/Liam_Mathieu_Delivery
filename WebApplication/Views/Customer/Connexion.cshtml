@model DTO.Customer

<!-- Vue de connexion pour le client 
    Demande le login et le mot de passe du client Lorsque la connexion est ok, retourne sur la page d'accueil du client (Voir sous CustomerController) 
    Il y a un lien pour revenir au menu principal et choisi si on est un client ou un livreur  
-->
  
@{
    ViewData["Title"] = "Connexion";
}

<h2>Connectez-vous</h2>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Connexion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Login" class="control-label">Nom d'utilisateur</label>
                <input asp-for="Login" class="form-control" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mot de passe</label>
                <input asp-for="Password" class="form-control"  type="password" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Se connecter" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


<div>
    <a  asp-controller="Home" asp-action="Index">Retour à l'accueil</a>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
