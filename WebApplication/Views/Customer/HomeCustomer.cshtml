@model IEnumerable<CustomerCityViewModel>

@{
    ViewData["Title"] = "Accueil client";
}

<h2>Accueil client</h2>

@foreach(var item in Model){
<div>
    <h3>Bienvenue @Html.DisplayFor(modelItem => item.Customers.Name) !</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Votre adresse :
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => item.Customers.Address)
            @Html.DisplayFor(modelItem => item.Cities.Name)
            @Html.DisplayFor(modelItem => item.Cities.Zip_code)

        </dd>
    </dl>
</div>
}
<div class="row" align="center">
    <div class="col-sm-4" align="center">
        <a asp-controller="Restaurant" asp-action="ListeRestaurant" class="btn btn-success" role="button">Nouvelle commande</a>
    </div>
    <div class="col-sm-4" align="center">
        <a asp-controller="Order" asp-action="ShowOrder" class="btn btn-success" role="button">Voir les commandes</a>
    </div>
    <div class="col-sm-4" align="center">
        <a href="https://localhost:44311/Deliveryman/Connexion" class="btn btn-success" role="button">Changer l'adresse de livraison</a>
    </div>
</div>
