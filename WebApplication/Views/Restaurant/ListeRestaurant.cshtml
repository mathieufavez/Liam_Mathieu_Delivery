@model IEnumerable<RestaurantCityViewModel>
    <--!>
        Affiche la liste des restaurants en collaboration avec notre site internet !
        Bouton retour
        Bouton choix du restaurant qui affichera le panier (et créera un ordre entre 2)
    </--!>

@{
    ViewData["Title"] = "ListeRestaurant";
}

<h2>Liste des restaurants</h2>


<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>
                Nom
            </th>

            <th>
                Adresse
            </th>

            <th>
                Ville
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Restaurants.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Restaurants.Address)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Cities.Zip_code)
                    @Html.DisplayFor(modelItem => item.Cities.Name)
                </td>

                <td>
                    <div align="center">
                        <a asp-controller="Restaurant" asp-action="CreateOrder" asp-route-id="@item.Restaurants.IdRestaurant" asp-route-idCity="@item.Restaurants.FK_idCity" class="btn btn-success" role="button">Sélectionner</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Customer" asp-action="HomeCustomer">Retour à l'accueil Client</a>
