                    @Html.DisplayFor(modelItem => item.Dishes.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Dishes.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dishes.Price)
                </td>

            </tr>
        }
    </tbody>
</table>
