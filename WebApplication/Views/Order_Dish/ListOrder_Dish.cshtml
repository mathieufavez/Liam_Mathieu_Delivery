@model IEnumerable<DishOrderDishViewModel>

@{
    ViewData["Title"] = "ListOrder_Dish";
}

<h2>ListOrder_Dish</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Numero de la commande
            </th>
            <th>
                Nom du plat
            </th>
            <th>
                Quantite
            </th>
            <th>
                Prix
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Dishes.FK_idOrder)
